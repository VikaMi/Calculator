<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.v.calculator2.MainActivity">

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="117dp"
        android:id="@+id/sum"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/difference"
        android:layout_marginTop="15dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/sum"
        android:layout_alignLeft="@+id/sum"
        android:layout_alignStart="@+id/sum" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/division"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/difference"
        android:layout_alignLeft="@+id/difference"
        android:layout_alignStart="@+id/difference" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/dobytok"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/division"
        android:layout_alignLeft="@+id/division"
        android:layout_alignStart="@+id/division" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="24dp"
        android:id="@+id/firstNumber"
        style="@style/Widget.AppCompat.Button.Colored"
        tools:text="write first number"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/secondNumber"
        android:layout_toStartOf="@+id/secondNumber"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/secondNumber"
        android:text="write second number"
        android:textAppearance="@style/TextAppearance.AppCompat"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignBaseline="@+id/firstNumber"
        android:layout_alignBottom="@+id/firstNumber"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <MultiAutoCompleteTextView
        android:text="MultiAutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dobytok"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:id="@+id/multiAutoCompleteTextView" />

</RelativeLayout>
